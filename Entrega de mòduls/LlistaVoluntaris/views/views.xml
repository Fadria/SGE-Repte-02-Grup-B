<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Definimos como es la vista explicita de la lista-->
    <record model="ir.ui.view" id="llista_voluntaris">
      <field name="name">Llista de voluntaris</field>
      <field name="model">llista_voluntaris.lista</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom_complet"/>
          <field name="edat"/>
          <field name="telefon"/>
          <field name="email"/>
          <field name="direccio"/>
          <field name="zona_recollida"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos 
    https://www.odoo.com/documentation/14.0/developer/reference/addons/actions.html
    -->

    <record model="ir.actions.act_window" id="llista_voluntaris_action_window">
      <field name="name">Llistat de voluntaris</field>
      <field name="res_model">llista_voluntaris.lista</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Llistat de voluntaris" id="llista_voluntaris_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Opcions Llista Voluntaris" id="llista_voluntaris_menu_1" parent="llista_voluntaris_menu_root"/>

    <!-- actions -->

    <menuitem name="Mostrar llista" id="llista_voluntaris_menu_1_list" parent="llista_voluntaris_menu_1"
              action="llista_voluntaris_action_window"/>

  </data>
</odoo>